@model TransactionSystem.Core.DTOs.Input.TransactionInputDto

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">New Deposit for @ViewBag.AccountName</h4>
                </div>
                <div class="card-body">
                    <form asp-action="CreateDeposit" method="post">
                        <input type="hidden" name="accountId" value="@ViewBag.AccountId" />

                        <div class="mb-3">
                            <label asp-for="Money" class="form-label">Money to Deposit</label>
                            <div class="input-group">
                                <span class="input-group-text">лв</span>
                                <input asp-for="Money" class="form-control" type="number" step="0.01" autofocus />
                            </div>
                            <span asp-validation-for="Money" class="text-danger"></span>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Confirm Deposit</button>
                            <a asp-action="IndexDeposits" asp-route-accountId="@ViewBag.AccountId" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>