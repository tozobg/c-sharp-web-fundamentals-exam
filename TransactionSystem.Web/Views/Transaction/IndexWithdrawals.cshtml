@model IEnumerable<TransactionSystem.Core.DTOs.Output.TransactionDetailsDto>

<div class="container mt-4">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-cash-stack"></i> Withdraw Management</h2>
        <a asp-controller="Account" asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to Accounts</a>
    </div>

    <div class="card shadow-sm mb-4 border-primary">
        <div class="card-body">
            <form asp-action="IndexWithdrawals" method="get" id="filterForm">
                <div class="row">
                    <div class="col-md-8">
                        <label class="form-label fw-bold">Select Account to View Withdrawals</label>
                        <select name="accountId" class="form-select form-select-lg"
                                asp-items="@(new SelectList(ViewBag.Accounts, "Id", "FullName", ViewBag.SelectedAccountId))"
                                onchange="document.getElementById('filterForm').submit()">
                            <option value="">-- Start typing or select a worker --</option>
                        </select>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.SelectedAccountId != null)
    {
        <div class="card shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">History for <strong>@ViewBag.SelectedAccountName</strong></h4>
                <span class="badge bg-success p-2 fs-6">Balance: @ViewBag.CurrentBalance?.ToString("C")</span>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Transaction Date</th>
                            <th>Money</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var withdraw in Model)
                        {
                            <tr>
                                <td>@withdraw.Date.ToString("MMM dd, yyyy HH:mm")</td>
                                <td class="text-danger fw-bold">- @withdraw.Money.ToString("N2")</td>
                                <td class="text-end">
                                    <form asp-action="DeleteWithdrawal" method="post" onsubmit="return confirm('Are you sure you want to delete this withdraw and subtract from the balance?')">
                                        <input type="hidden" name="id" value="@withdraw.Id" />
                                        <input type="hidden" name="accountId" value="@ViewBag.SelectedAccountId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                                    </form>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-center py-4 text-muted">No withdrawals recorded for this account.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="card-footer bg-white">
                <a asp-action="CreateWithdrawal" asp-route-accountId="@ViewBag.SelectedAccountId" class="btn btn-success">
                    <i class="bi bi-plus-lg"></i> Add New Withdraw
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5 border rounded bg-light">
            <p class="text-muted fs-5">Please select an account from the dropdown above to manage withdrawal.</p>
        </div>
    }
</div>