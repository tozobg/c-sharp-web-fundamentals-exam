@model TransactionSystem.Core.DTOs.Input.UpdateAccountDto

<h2>Edit Account Details</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="@(ViewData.ModelState.Keys.Contains("") ? "" : "display:none")"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="AccountNumber" class="form-label font-weight-bold"></label>
                <input asp-for="AccountNumber" class="form-control" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FullName" class="form-label font-weight-bold"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label text-muted">Current Balance (Non-Editable)</label>
                <input class="form-control bg-light" value="Balance updates via transactions only" disabled />
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>