@model IEnumerable<TransactionSystem.Core.DTOs.Output.AccountDto>

<h2>Bank Accounts</h2>

<table class="table">
    <thead>
        <tr>
            <th>Account Number</th>
            <th>Full Name</th>
            <th>Balance</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model)
        {
            <tr>
                <td>@account.AccountNumber</td>
                <td>@account.FullName</td>
                <td>@account.Balance.ToString("C")</td>
                <td>
                    <a class="btn btn-primary" href="/Transaction/Deposit?AccountNumber=@account.AccountNumber">Deposit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Open New Account</a>